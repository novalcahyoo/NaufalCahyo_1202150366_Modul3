<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.naufalcahyo.naufalcahyo_1202150366_modul3.DetailMerk">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/merksImageDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/titleDetail"
            style="@style/MerkDetailTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/merksImageDetail"
            android:layout_marginTop="14dp"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="@string/title_placeholder"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/subTitleDetail"
            style="@style/MerkDetailText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/titleDetail"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="@string/filler_text" />

        <ImageButton
            android:id="@+id/kurangiAir"
            style="@style/MinusButtons"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_below="@+id/gbrBaterai"
            android:layout_marginEnd="15dp"
            android:layout_toStartOf="@+id/gbrBaterai"
            android:background="@drawable/button_background"
            android:contentDescription="@string/minus_button" />

        <ImageView
            android:id="@+id/gbrBaterai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/subTitleDetail"
            android:layout_centerHorizontal="true"
            android:src="@drawable/img_photo" />


        <ImageButton
            android:id="@+id/tambahAir"
            style="@style/PlusButtons"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/gbrBaterai"
            android:background="@drawable/button_background"
            android:contentDescription="@string/plus_button" />

        <TextView
            android:id="@+id/liter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/textView"
            android:text="20 "
            android:textAlignment="center"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="24dp"
            android:layout_toStartOf="@+id/tambahAir"
            android:text="L "
            android:textAlignment="center"
            android:textSize="40dp" />



    </RelativeLayout>


</ScrollView>
